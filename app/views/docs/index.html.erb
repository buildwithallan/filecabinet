<div class="container">
	<div class="row">

	<% @docs.each do |doc| %>

	<div class="col-md-4">
		<div class="card mt-3">
			<div class="card-body">

				<h3><%= link_to doc.title, doc_path(doc.id) %></h3>
	            <p><%= time_ago_in_words(doc.created_at) %></p>
	            <p><%= truncate(doc.content, length:50) %></p>
	
			</div>
		</div>
	</div>

	
<% end %>

	</div>
</div>



